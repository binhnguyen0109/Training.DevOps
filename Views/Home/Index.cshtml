                    //}

                ],
                "columns": [
                    { "data": "CompanyId" },
                    { "data": "CompanyName" },
                    { "data": "Description" },
                    { "data": "CreateDate" },
                    { "data": "UpdateDate" }
                ],
                "bAutoWidth": false,
            });
        }

    </script>

