@{
    var dataAgency = ViewData["ID"];
}
<input type="hidden" id="agencyHidden" />
<div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"><b>Thông tin chi tiết</b></h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <b>Tên Công Ty Sở Hữu:</b><br>
                        <p id="rqName"></p>
                    </div>
                    <div class="col-md-12" style="margin-top: 10px">
                        <b>Tên Chi Nhánh:</b><br>
                        <p id="rqAN"></p>
                    </div>
                    <div class="col-md-12" style="margin-top: 10px">
                        <b>Tên Tài Khoản Ứng Dụng:</b><br>
                        <p id="rqCD"></p>
                    </div>
                    <div class="col-md-12" style="margin-top: 10px">
                        <b>Địa Chỉ:</b><br>
                        <p id="rqIT"></p>
                    </div>
                    <div class="col-md-12" style="margin-top: 10px">
                        <b>Số Điện Thoại:</b><br>
                        <p id="rqIN"></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<form onsubmit="updateAgency(); return false">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title"><b>Cập nhật thông tin</b></h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <p>
                        <p id="idd"></p>
                        <div class="col-md-12">
                            <b>Tên Công Ty Sở Hữu:</b>
                            <select id="q" class="form-control" disabled="disabled"></select>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Tên Tài Khoản Ứng Dụng:</b><br>
                            <select id="w" class="form-control" disabled="disabled"></select>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Tên Chi Nhánh</b><br>
                            <input id="e" type="text" class="form-control">
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Địa Chỉ:</b><br>
                            <input id="r" type="text" class="form-control">
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Số Điện Thoại:</b><br>
                            <input id="t" type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="clearModal()">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</form>
<input type="hidden" id="companyHidden" />
<form onsubmit="createAgency(); return false">
    <div class="container">
        <!-- Modal -->
        <div class="modal fade2" id="createAgencyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"><b>Tạo chi nhánh mới</b></h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <label for="qq">Tên Công Ty Sở Hữu:</label>
                                <select class="form-control select2" style="width: 100%;" id="qq" disabled="disabled"></select>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <label for="ww">Chọn Tài Khoản:</label>
                                <select class="form-control select2" style="width: 100%;" id="ww"></select>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <label for="ee">Tên Chi Nhánh:</label>
                                <input id="ee" type="text" class="form-control" required>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <label for="rr">Địa Chỉ:</label>
                                <input id="rr" type="text" class="form-control" required>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <label for="tt">Số Điện Thoại:</label>
                                <input id="tt" type="text" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Tạo Mới</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="clearModal(); showAccount();">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- Datatable -->
<style>
    .city {
        background-color: azure;
        color: black;
        padding: 1%;
        border-left: solid cadetblue;
        width: 100%;
    }
</style>
<div class="row col-md-12">
    <h3 class="city" id="comNameShow"></h3>
</div>


<div class="row col-md-12">
    <table id="detail-table" class="table table-hover" cellspacing="0" style="table-layout: auto">
        <thead>
            <tr>
                <th><label>STT</label></th>
                <th><label>Công Ty</label></th>
                <th><label>Tên Chi Nhánh</label></th>
                <th><label>Địa Chỉ</label></th>
                <th><label>Thiết Bị</label></th>
                <th><label>Tùy Chọn</label></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div class="NewThing">
        <button type="button" class="btn btn-primary fa fa-mail-reply-all" style="float:right;margin-top:15px;margin-left:15px;" data-toggle="modal" data-target="" onclick="window.location.href='@Url.Action("Index", "Company")'"><font face="verdana"> Quay Lại Trang Công Ty</button>
        <button type="button" class="btn btn-primary fa fa-plus" style="float:right;margin-top:15px;" data-toggle="modal" data-target="" onclick="showCreateModal()"><font face="verdana"> Tạo Chi Nhánh</button>

    </div>
</div>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts {
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/asvd/dragscroll/master/dragscroll.js"></script>
    <script type="text/javascript" src="~/AdminLTE/bower_components/select2/dist/js/select2.js"></script>
    <link href="~/AdminLTE/bower_components/select2/dist/css/select2.css" rel="stylesheet" />
    <script src="~/AdminLTE/bower_components/select2/dist/js/select2.js"></script>
    <script>
        $(document).ready(function() {
            loadCompanyAgency();
            showAccount();
            showAccountEdit();
            showCompany();
            getComName();
        });
        $('#ww').select2({
            dropdownParent: $('#createAgencyModal'),
        });

        function getComName() {

            $.ajax({
                url: '@Url.RouteUrl(new { action = "ViewDetail", controller = "Company" })',

                data: {
                    company_id: @dataAgency
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var html = '';
                    html = 'Tất Cả Chi Nhánh Của Công Ty ' + data.result.ObjReturn.CompanyName;
                    $('#comNameShow').append(html);
                }
                });
        }
        function loadCompanyAgency() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAllAgency", "Company", new { company_id = dataAgency })',
                data: {
                },
                success: function(result) {
                    initDatatable(result.result.ObjReturn);
                },
                error: function(error) {
                    showMessage("Cõ lỗi xảy ra. Vui lòng thử lại sau.", "error", "OK");
                }
            });
        }

        function initDatatable(data) {
            if (data == null) {
                $('#detail-table').dataTable().fnClearTable();
            }
            $("#detail-table").dataTable().fnDestroy();
            $("#detail-table").dataTable({
                stateSave: true,
                "bFilter": true,
                "bSort": false,
                "data": data,
                "bRetrieve": true,
                "bScrollCollapse": true,
                "bProcessing": true,
                "oLanguage": {
                    "sSearch": "Tìm kiếm:",
                    "sSearchPlaceholder": "",
                    "sZeroRecords": "Không có dữ liệu phù hợp",
                    "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                    "sEmptyTable": "Không có dữ liệu",
                    "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                    "sLengthMenu": "Hiển thị _MENU_ dòng",
                    "sProcessing": "Đang xử lý...",
                    "oPaginate": {
                        "sNext": "<i class='fa fa-chevron-right'></i>",
                        "sPrevious": "<i class='fa fa-chevron-left'></i>"
                    }
                },
                "aoColumnDefs": [
                    {
                        "aTargets": [0, 2, 3, 4, 5],
                        "bSortable": false,
                        "sClass": "text-center"
                    },
                ],
                "columns": [
                    { "data": "NumericalOrder" },
                    { "data": "CompanyName" },
                    { "data": "AgencyName" },
                    { "data": "Address" },
                    {
                        "data": "RequestName",
                        "mRender": function (data, type, full) {
                            return '<a href="@Url.Action("AgencyDevice", "Device")?id=' + full.AgencyId + '">Xem Thiết bị</a>';
                        }
                    },
                    {
                        "aTargets": [5],
                        "mRender": function (data, type, full) {
                            var view = ' <button type="button" class="btn btn-info fa fa-eye" data-toggle="modal" data-target="" onclick="getData(' +
                                full.AgencyId +
                                ')"></button>';
                            var edit = ' <button type="button" class="btn btn-warning fa fa-pencil" data-toggle="modal" data-target="" onclick="getDataEdit(' +
                                full.AgencyId +
                                ')"></button>';
                            var del = ' <button type="button" class="btn btn-danger fa fa-trash" data-toggle="modal" data-target="" onclick="removeAgency(' +
                                full.AgencyId +
                                ')"></button>';
                            return view + " " + edit + " " + del;
                        }
                    },
                ],
                "bAutoWidth": false,
            });
        }

        //show Data on View Detail Modal
        function getData(id) {
            $.ajax({
                url: '@Url.RouteUrl(new {action = "GetAgencyDetail", controller = "Agency"})',

                data: {
                    agency_id: id
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    $("#rqID").text(data.result.ObjReturn.AgencyId);
                    $("#rqName").text(data.result.ObjReturn.CompanyName);
                    $("#rqCD").text(data.result.ObjReturn.UserName);
                    $("#rqAN").text(data.result.ObjReturn.AgencyName);
                    $("#rqIT").text(data.result.ObjReturn.Address);
                    $("#rqIN").text(data.result.ObjReturn.Telephone);

                }
            });
            $('#detailModal').modal('show');
        }

        //show Data on Edit Modal
        function getDataEdit(id) {
            $.ajax({
                url: '@Url.RouteUrl(new {action = "GetAgencyDetail", controller = "Agency"})',

                data: {
                    agency_id: id
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#q").val(data.result.ObjReturn.CompanyId);
                    $("#w").val(data.result.ObjReturn.AccountId);
                    $("#idd").val(data.result.ObjReturn.AgencyId);
                    $("#e").val(data.result.ObjReturn.AgencyName);
                    $("#r").val(data.result.ObjReturn.Address);
                    $("#t").val(data.result.ObjReturn.Telephone);
                }
            });
            $('#EditModal').modal('show');
        }

        //show delete modal
        function removeAgency(id) {
            swal({
                title: 'Bạn có Chắc Chắn Muốn Xóa?',
                text: "Dữ Liệu Đã Xóa Không Thể Hoàn Lại!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Quay Lại',
                confirmButtonText: 'Chấp Nhận Xóa!'
            }).then(function () {
                deleteAgency();
            });
            $('#agencyHidden').val(id);
        }

        //delete agency
        function deleteAgency() {
            var agency_idd = $('#agencyHidden').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("RemoveAgency", "Agency")',
                data: {
                    agency_id: agency_idd
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    swal(
                        'Đã Xóa!',
                        'Dữ Liệu Của Bạn Đã Được Xóa.',
                        'success'
                    )
                    loadCompanyAgency();
                }
            });
        }

        //show Create Modal
        function showCreateModal() {
            $('#createAgencyModal').modal('show');
        }
        function clearModal() {
            $('#createAgencyModal').on('hidden.bs.modal', function (e) {
                $(this)
                    .find("input,textarea")
                    .val('')
                    .end()
                    .find("input[type=checkbox], input[type=radio]")
                    .prop("checked", "")
                    .end();
            })
        }
        //show all company on combo box
        function showCompany() {
            $('#qq, #q')
                    .find('option')
                    .remove()
                    .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetCompanyDetail", "Company", new { company_id = dataAgency })',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var len = data.result.ObjReturn.length;
                    var html = '';
                    for (var i = 0; i < len; i++) {
                        html += '<option value="' +
                            data.result.ObjReturn[i].CompanyId +
                            '">' +
                            data.result.ObjReturn[i].CompanyName +
                            '</option>';
                    }
                    $('#q').append(html);
                    $('#qq').append(html);
                }
            });
        }

        //show all account on combo box
        function showAccount() {
            $('#ww')
                .find('option')
                .remove()
                .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAllAgencyAccount", "Account")',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var len = data.result.ObjReturn.length;
                    var html = '<option value="0">--Chọn tài khoản--</option>';
                    for (var i = 0; i < len; i++) {
                        html += '<option value="' +
                            data.result.ObjReturn[i].AccountId +
                            '">' +
                            data.result.ObjReturn[i].Username +
                            '</option>';
                    }
                    $('#ww').append(html);
                }
            });

        }
        function showAccountEdit() {
            $('#w')
                .find('option')
                .remove()
                .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAllAccount", "Account")',
                data: {
                },
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var len = data.result.ObjReturn.length;
                    var html = '<option value="0">--Chọn tài khoản--</option>';
                    for (var i = 0; i < len; i++) {
                        html += '<option value="' +
                            data.result.ObjReturn[i].AccountId +
                            '">' +
                            data.result.ObjReturn[i].Username +
                            '</option>';
                    }
                    $('#w').append(html);
                }
            });
        }

        //create agency when click create button on create modal
        function updateAgency() {
            var empObj = {
                AgencyId: $('#idd').val(),
                AgencyName: $('#e').val(),
                Address: $('#r').val(),
                Telephone: $('#t').val(),
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateAgency", "Agency")',
                data: JSON.stringify(empObj),
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (!data.result.isError) {
                        $('#EditModal').modal('hide');
                        loadCompanyAgency();
                        swal(data.result.SuccessMessage, "", "success");
                    }
                    else
                        swal(data.result.WarningMessage, "", "error");
                }
            });
        }

        function createAgency() {
            if ($('#ww').val() == 0) {
                swal("Vui lòng chọn tài khoản", "", "error");
            }
            else {
                var empObj = {
                    CompanyId: $('#qq').val(),
                    AccountId: $('#ww').val(),
                    AgencyName: $('#ee').val(),
                    Address: $('#rr').val(),
                    Telephone: $('#tt').val(),
                }
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("CreateAgency", "Agency")',
                    data: JSON.stringify(empObj),

                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (!data.result.isError) {
                            clearModal();
                            $('#createAgencyModal').modal('hide');
                            loadCompanyAgency();
                            swal(data.result.SuccessMessage, "", "success");
                        }
                        else
                            swal(data.result.WarningMessage, "", "error");
                    }
                });
            }
        }


    </script>

}
