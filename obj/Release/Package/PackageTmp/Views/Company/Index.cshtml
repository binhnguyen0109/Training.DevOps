@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="ViewModal" tabindex="-1" role="dialog" aria-labelledby="exampleLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title"><b>Thông tin chi tiết</b></h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" id="id" />
                        <div class="col-md-12">
                            <b>Tên Công Ty:</b><br>
                            <p id="comName"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Mô Tả:</b><br>
                            <p id="comDescription"></p>
                        </div>
                        <div class="col-md-6" style="margin-top:10px">
                            <b>Ngày Tạo:</b><br>
                            <p id="comCreateDate"></p>
                        </div>
                        <div class="col-md-6" style="margin-top:10px">
                            <b>Lần Cập Nhật Cuối:</b><br>
                            <p id="comUpdateDate"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <h4 class="city"><b>Chỉ số chọn người hỗ trợ phù hợp.</b><br></h4>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <i class="fa fa-percent" aria-hidden="true"></i> <b>Điểm Bình Chọn(%): </b><span id="viewPercentForITSupporterRate"></span>                            
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <i class="fa fa-percent" aria-hidden="true"></i> <b>Kinh Nghiệm(%): </b><span id="viewPercentForITSupporterExp"></span>                            
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <i class="fa fa-percent" aria-hidden="true"></i> <b>Độ Thân Thuộc(%): </b><span id="viewPercentForITSupporterFami"></span>                            
                        </div>
                    </div>
                </div>                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="companyHidden" />
<form onsubmit="createCompany(); return false">
    <div class="container">
        <!-- Modal -->
        <div class="modal fade2" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"><b>Tạo công ty mới</b></h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <b>Tên Công Ty:</b><br>
                                <input class="form-control" type="text" id="comNameCreate" required title="Vui lòng nhập tên công ty"/>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Mô Tả:</b><br>
                                <input class="form-control" type="text" id="comDescriptionCreate" required title="Vui lòng nhập mô tả"/>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <h4 class="city"><b>Vui lòng thêm chỉ số để chọn người hỗ trợ phù hợp</b><br></h4>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Điểm Bình Chọn(%):</b><br>
                                <input class="form-control" type="text" id="comPercentForITSupporterRate" required title="Vui lòng nhập điểm bình chọn(%)" pattern="(0*(?:[1-9][0-9]?|100))" title="Vui lòng nhập số nguyên và nhỏ hơn 100" />
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Kinh Nghiệm(%):</b><br>
                                <input class="form-control" type="text" id="comPercentForITSupporterExp" required title="Vui lòng nhập kinh nghiệm(%)" pattern="(0*(?:[1-9][0-9]?|100))" title="Vui lòng nhập số nguyên và nhỏ hơn 100" />
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Độ Thân Thuộc(%):</b><br>
                                <input class="form-control" type="text" id="comPercentForITSupporterFami" required title="Vui lòng nhập độ thân thuộc(%)" pattern="(0*(?:[1-9][0-9]?|100))" title="Vui lòng nhập số nguyên và nhỏ hơn 100" />
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Tạo Mới</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="clearModal()">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<form onsubmit="UpdateCompany(); return false">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title"><b>Cập nhật thông tin</b></h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" id="id" />
                        <div class="col-md-12">
                            <b>Tên Công Ty:</b><br>
                            <input class="form-control" type="text" id="comNameEdit" required title="Vui lòng nhập tên công ty"/>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Mô Tả:</b><br>
                            <input class="form-control" type="text" id="comDescriptionEdit" required title="Vui lòng nhập mô tả"/>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <h4 class="city"><b>Chỉ số chọn người hỗ trợ phù hợp.</b><br></h4>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Điểm Bình Chọn(%):</b><br>
                            <input class="form-control" type="text" id="editPercentForITSupporterRate" required title="Vui lòng nhập điểm bình chọn(%)" pattern="(0*(?:[1-9][0-9]?|100))" title="Vui lòng nhập số nguyên và nhỏ hơn 100"/>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Kinh Nghiệm(%):</b><br>
                            <input class="form-control" type="text" id="editPercentForITSupporterExp" required title="Vui lòng nhập kinh nghiệm(%)" pattern="(0*(?:[1-9][0-9]?|100))" title="Vui lòng nhập số nguyên và nhỏ hơn 100"/>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Độ Thân Thuộc(%):</b><br>
                            <input class="form-control" type="text" id="editPercentForITSupporterFami" required title="Vui lòng nhập độ thân thuộc(%)" pattern="(0*(?:[1-9][0-9]?|100))" title="Vui lòng nhập số nguyên và nhỏ hơn 100"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</form>
   

    <style>
        .city {
            background-color: azure;
            color: black;
            padding: 1%;
            border-left: solid cadetblue;
            width: 100%;
        }

        p.one {
            margin-top: 5%;
            padding: 2%;
            border-top: 1px solid lightgrey;
            width: 100%;
        }
    </style>
    <div class="row col-md-12">
        <h3 class="city">Quản Lý Công Ty</h3>
    </div>
    <!-- Datatable -->

    <div class="row col-md-12">
        <table id="detail-table" class="table table-hover" cellspacing="0" style="table-layout: auto">
            <thead>
                <tr>
                    <th><label>STT</label></th>
                    <th><label>Tên Công Ty</label></th>
                    <th><label>Thông Tin</label></th>
                    <th><label>Ngày Tạo</label></th>
                    <th><label>Chi Nhánh</label></th>
                    <th><label>Hợp Đồng</label></th>
                    <th><label>Tùy Chọn</label></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="NewThing">
            <button type="button" class="btn btn-primary fa fa-plus" style="float:right; margin-top:15px;" data-toggle="modal" data-target="" onclick="showCreateModal()"><font face="verdana"> Tạo Công Ty</button>
        </div>
    </div>

    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    @section scripts {
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/asvd/dragscroll/master/dragscroll.js"></script>
        <script>
        $(document).ready(function() {
            loadCompany();
        });

        function loadCompany() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAllCompany", "Company")',
                data: {
                },
                success: function (result) {
                    initDatatable(result.result.ObjReturn);
                },
                error: function(error) {
                    showMessage("Cõ lỗi xảy ra. Vui lòng thử lại sau.", "error", "OK");
                }
            });
        }
        function initDatatable(data) {
            if (data == null) {
                $('#detail-table').dataTable().fnClearTable();
            }
            $("#detail-table").dataTable().fnDestroy();
            $("#detail-table").dataTable({
                stateSave: true,
                "bFilter": true,
                "bSort": false,
                "data": data,
                "bRetrieve": true,
                "bScrollCollapse": true,
                "bProcessing": true,
                "oLanguage": {
                    "sSearch": "Tìm kiếm:",
                    "sSearchPlaceholder": "",
                    "sZeroRecords": "Không có dữ liệu phù hợp",
                    "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                    "sEmptyTable": "Không có dữ liệu",
                    "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                    "sLengthMenu": "Hiển thị _MENU_ dòng",
                    "sProcessing": "Đang xử lý...",
                    "oPaginate": {
                        "sNext": "<i class='fa fa-chevron-right'></i>",
                        "sPrevious": "<i class='fa fa-chevron-left'></i>"
                    }
                },
                "aoColumnDefs": [
                    {
                        "aTargets": [0, 2, 3,4 ,5,6],
                        "bSortable": false,
                        "sClass": "text-center"
                    },
                ],
                "columns": [
                    { "data": "NumericalOrder" },
                    { "data": "CompanyName" },
                    { "data": "Description" },
                    { "data": "CreateDate" },
                    {
                        "data": "RequestName",
                        "mRender": function (data, type, full) {
                            return '<a href="@Url.Action("CompanyAgency", "Agency")?id=' + full.CompanyId + '">Xem Chi Nhánh</a>';
                        }
                    },
                    {
                        "data": "RequestName",
                        "mRender": function (data, type, full) {
                            return '<a href="@Url.Action("IndexContract", "Contract")?contractId=' + full.CompanyId + '">Xem Hợp Đồng</a>';
                        }
                    },
                    {
                        "aTargets": [6],
                        "mRender": function (data, type, full) {
                            var view = ' <button type="button" class="btn btn-info fa fa-eye" data-toggle="modal" data-target="" onclick="getData(' + full.CompanyId + ')"></button>';
                            var edit = ' <button type="button" class="btn btn-warning fa fa-pencil" data-toggle="modal" data-target="" onclick="getDataEdit(' + full.CompanyId + ')"></button>';
                            var del = ' <button type="button" class="btn btn-danger fa fa-trash" data-toggle="modal" data-target="" onclick="removeCompany(' + full.CompanyId + ')"></button>';
                            return view + " " + edit + " " + del;
                        }
                    },
                ],
                "bAutoWidth": false,
            });
        }
        function showCreateModal() {
            $('#CreateModal').modal('show');
        }
        function clearModal() {
            $('#CreateModal').on('hidden.bs.modal', function (e) {
                $(this)
                    .find("input,textarea,select")
                    .val('')
                    .end()
                    .find("input[type=checkbox], input[type=radio]")
                    .prop("checked", "")
                    .end();
            })
        }
        function getData(idd) {

            $.ajax({
                url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Company" })',

                data: {
                    company_id: idd
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#comName").text(data.result.ObjReturn.CompanyName);
                    $("#comDescription").text(data.result.ObjReturn.Description);
                    $("#comCreateDate").text(data.result.ObjReturn.CreateDate);
                    $("#comUpdateDate").text(data.result.ObjReturn.UpdateDate);
                    $("#viewPercentForITSupporterRate").text(data.result.ObjReturn.PercentForITSupporterRate);
                    $("#viewPercentForITSupporterExp").text(data.result.ObjReturn.PercentForITSupporterExp);
                    $("#viewPercentForITSupporterFami").text(data.result.ObjReturn.PercentForITSupporterFamiliarWithAgency);
                }
                });
            $('#ViewModal').modal('show');
        }


        function getDataEdit(id) {
            $.ajax({
                url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Company" })',

                data: {
                    company_id: id
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#id").val(data.result.ObjReturn.CompanyId);
                    $("#comNameEdit").val(data.result.ObjReturn.CompanyName);
                    $("#comDescriptionEdit").val(data.result.ObjReturn.Description);
                    $("#editPercentForITSupporterRate").val(data.result.ObjReturn.PercentForITSupporterRate);
                    $("#editPercentForITSupporterExp").val(data.result.ObjReturn.PercentForITSupporterExp);
                    $("#editPercentForITSupporterFami").val(data.result.ObjReturn.PercentForITSupporterFamiliarWithAgency);
                }
            });
            $('#EditModal').modal('show');
        }
        function UpdateCompany() {
            var empObj = {
                CompanyId: $('#id').val(),
                CompanyName: $('#comNameEdit').val(),
                Description: $('#comDescriptionEdit').val(),
                PercentForITSupporterRate: $('#editPercentForITSupporterRate').val(),
                PercentForITSupporterExp: $('#editPercentForITSupporterExp').val(),
                PercentForITSupporterFamiliarWithAgency: $('#editPercentForITSupporterFami').val(),
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateCompany", "Company")',
                data: JSON.stringify(empObj),
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $('#EditModal').modal('hide');
                    if (!data.result.isError) {
                        swal(data.result.SuccessMessage, "", "success");
                    }
                    else
                        swal(data.result.WarningMessage, "", "error");

                    loadCompany();
                }
            });
        }
        function createCompany() {
            var empObj = {
                CompanyName: $('#comNameCreate').val(),
                Description: $('#comDescriptionCreate').val(),
                PercentForITSupporterRate: $('#comPercentForITSupporterRate').val(),
                PercentForITSupporterExp: $('#comPercentForITSupporterExp').val(),
                PercentForITSupporterFamiliarWithAgency: $('#comPercentForITSupporterFami').val(),
            }
             $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateCompany", "Company")',
                data: JSON.stringify(empObj),

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                        if (!data.result.isError) {        
                            clearModal();
                            $('#CreateModal').modal('hide');
                            loadCompany();
                            swal(data.result.SuccessMessage, "", "success");
                        }
                        else
                            swal(data.result.WarningMessage, "", "error");


                }
            });
        }
        function removeCompany(id) {
            swal({
                title: 'Bạn có Chắc Chắn Muốn Xóa?',
                text: "Dữ Liệu Đã Xóa Không Thể Hoàn Lại!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Quay Lại',
                confirmButtonText: 'Chấp Nhận Xóa!'
            }).then(function () {
                deleteCompany();
            });
            $('#companyHidden').val(id);
        }
        function deleteCompany() {
            var company_id = $('#companyHidden').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("RemoveCompany", "Company")',
                data: {
                    company_id: company_id
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $('#modalConfirmDelete').modal('hide')
                    swal(
                        'Đã Xóa!',
                        'Dữ Liệu Của Bạn Đã Được Xóa.',
                        'success'
                    )
                    loadCompany();
                }
            });
        }

        </script>

    }

